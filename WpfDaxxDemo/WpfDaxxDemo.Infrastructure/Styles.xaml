<ResourceDictionary
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDaxxDemo.Infrastructure"
             mc:Ignorable="d" >
    <Style x:Key="OrdinaryText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="5,0"/>
        <!--<Setter Property="VerticalAlignment" Value="Center"/>-->
    </Style>
    <Style x:Key="CaptionText" TargetType="TextBlock" BasedOn="{StaticResource OrdinaryText}">
        <Setter Property="Foreground" Value="#FF88323F"/>        
    </Style>
</ResourceDictionary>
